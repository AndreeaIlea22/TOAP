/var/log/nginx/doaj.*.log {
	daily
	missingok
	rotate 7
	compress
	delaycompress
	notifempty
    dateext
	dateyesterday
	create 0640 www-data adm
	sharedscripts
	prerotate
		if [ -d /etc/logrotate.d/httpd-prerotate ]; then \
			run-parts /etc/logrotate.d/httpd-prerotate; \
		fi \
	endscript
	postrotate
		invoke-rc.d nginx rotate >/dev/null 2>&1
		aws --profile doaj-nginx-logs s3 sync . s3://doaj-nginx-logs --exclude "*" --include "doaj.*.gz"
	endscript
}
